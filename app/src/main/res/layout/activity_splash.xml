<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="monash.sprintree.activities.Splash"
    android:background="@drawable/background" android:orientation="vertical">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="650px"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Please wait while the application loads trees"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:progress="50"
        android:id="@+id/mainProgressBar"
        style="?android:attr/progressBarStyleHorizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goto Home"
        android:onClick="launchHome"
        android:visibility="gone"
        android:layout_gravity="center" />
</LinearLayout>
